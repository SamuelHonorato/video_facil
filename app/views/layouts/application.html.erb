<!DOCTYPE html>
<html>
  <head>
    <title>VideoFacil</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>

    <%= nav_bar brand: "Vídeo Fácil", brand_link: root_path do %>
      <%= menu_group do %>
        <%= menu_item "Criar Vídeo", videos_path %>
        <%= menu_item "Categorias", categories_path %>

      <% end %>
    <% end %>

    <div class="container">
      <%= yield %>
    </div>
  </body>
</html>
