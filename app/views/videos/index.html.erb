<% if @categories_favorite.length == 0 %>
  <h4> Sem categorias favoritadas </h4>
<% end %>

<table class="table table-bordered table-hover">
  <tbody>
    <% @categories_favorite.each do |category| %>
      <h3> <%= category.name %> </h3>

      <% if Video.where(category_id: category.id).length == 0 %>
        Categoria sem v√≠deos salvos
      <% else %>
        <% Video.where(category_id: category.id).each do |video| %>

          <tr>
            <td> <%= video.title %> </td>
            <td> <%= button_to "Visualizar", video, method: :get, class: "btn btn-primary" %> </td>
          </tr>

        <% end %>
      <% end %>
    <% end %>
  </tbody>
</table>
