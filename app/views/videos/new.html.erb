<% if flash[:video_add] %>
  <div class="alert alert-success" role=alert">
    <%= flash[:video_add] %>
  </div>
<% end %>

<% @video_new.errors.full_messages.each do |message| %>
  <div class="alert alert-danger" role="alert">
    <%= message %>
  </div>
<% end %>

<%= form_for @video_new do |form| %>
  <div class="form-group">

    <div class="form-group">
      <%= form.label "Título" %>
      <%= form.text_field :title, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= form.label "Url do vídeo no Youtube" %>
      <%= form.text_field :url, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= form.label "Categoria" %>
      <%= form.collection_select :category_id, @category_all, :id, :name, {}, class: "form-control" %>
    </div>

    <%= form.submit "Adicionar", class: "btn btn-primary" %>

  </div>
<% end %>
